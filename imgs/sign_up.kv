<SignUp>
    BoxLayout:
        orientation: 'vertical'
        padding: (50, 0, 50, 50)

        GridLayout:
            rows: 2

            MDLabel:
                text: "MES"
                halign: 'center'
                font_size: 30
                size_hint: .1, .3
                on_touch_down: app.screen_main_s(*args)

            BoxLayout:
                orientation: 'vertical'
                height: 30

                GridLayout:
                    cols: 2
                    spacing: 10
                    margin: (0, 0, 0, 20)

                    MDTextField:
                        id: name
                        hint_text: 'Имя'
                    MDTextField:
                        id: last_name
                        hint_text: 'Фамилия'
                    MDTextField:
                        id: age
                        hint_text: 'Возраст'
                    MDTextField:
                        id: gender
                        hint_text: 'Пол'
                    MDTextField:
                        id: login
                        hint_text: 'Логин'
                    MDTextField:
                        id: password
                        hint_text: 'Пароль'

                GridLayout:
                    rows: 2
                    MDFlatButton: 
                        text: 'Создать аккаунт'
                        size_hint: 1, .02
                        md_bg_color: app.theme_cls.primary_color
                        on_press: root.create_account(), app.screen_main()

                    MDLabel: 
                        text: "Уже есть аккаунт? Войти"
                        theme_text_color: "Custom"
                        text_color: (.1, .3, 1, .9)
                        on_touch_down: app.screen_sign_in_s(*args)