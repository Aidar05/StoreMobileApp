#:import images_path kivymd.images_path

<ProfileInfo@MDTextField>:
    size_hint: 1, .1


<Profile>: 
    name: 'main'
    padding: (10, 0, 10, 0)

    GridLayout:
        rows: 5

        GridLayout:
            cols: 2
            size_hint: .2, .1
            height: .1

            BoxLayout:
                NavIconsTop: 
                    icon: "account"
                    on_press: app.screen_profile()
                MDLabel: 
                    text: "Профиль"
                    bold: "True"

            GridLayout:
                cols: 3

                NavIconsTop:
                    icon: "plus-circle-outline"
                NavIconsTop: 
                    icon: "magnify"
                NavIconsTop:
                    icon: "bell-outline" 

        BoxLayout:
            size_hint: 1, .1
            height: .1
            padding: (165, 0, 0, 0)

            canvas.before:
                Color: 
                    rgba: 0, 0, 0, 1
                Line: 
                    points: [0, 460, 500, 460]            

            MDIcon:
                icon: 'account-card-outline'
                font_size: 50

        BoxLayout:
            orientation: "horizontal"
            padding: (50, 50, 50, 50)

            BoxLayout:
                orientation: 'vertical'
                
                BoxLayout:
                    orientation: 'horizontal'

                    MDLabel: 
                        text: 'Имя: '
                    ProfileInfo:
                        id: name
                        text: ''               

                BoxLayout:
                    orientation: 'horizontal'
                 
                    MDLabel: 
                        text: 'Фамилия: '
                    ProfileInfo:
                        id: last_name
                        text: ''                

                BoxLayout:
                    orientation: 'horizontal'
                    
                    MDLabel: 
                        text: 'Возраст: '                    
                    ProfileInfo:
                        id: age
                        text: ''                

                BoxLayout:
                    orientation: 'horizontal'
                    
                    MDLabel: 
                        text: 'Гендер: '                
                    ProfileInfo:
                        id: gender
                        text: ''                

                BoxLayout:
                    orientation: 'horizontal'

                    MDLabel: 
                        text: 'Логин: '                    
                    ProfileInfo:
                        id: login
                        text: ''

                BoxLayout:
                    orientation: 'horizontal'

                    MDLabel: 
                        text: 'Пароль: '
                    ProfileInfo:
                        id: password
                        text: ''

                BoxLayout:
                    orientation: 'horizontal'
                    spacing: 50

                    MDFlatButton: 
                        text: 'Создать аккаунт'
                        size_hint: 1, .7
                        md_bg_color: app.theme_cls.primary_color
                        on_press: app.screen_sign_up()

                    MDFlatButton: 
                        text: 'Войти'
                        size_hint: .5, .7
                        md_bg_color: app.theme_cls.primary_color
                        on_press: app.screen_sign_in()

        GridLayout:
            cols: 4
            padding: (50, 0, 50, 0)
            size_hint: .2, .1
            height: .1

            NavIcons:
                icon: "menu"
            NavIcons:
                icon: "home-variant-outline"
                on_press: app.screen_main()
            NavIcons:
                icon: "cog-outline"
                on_press: app.screen_settings()
