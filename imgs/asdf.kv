<Chosen>: 
    padding: (10, 0, 10, 0)

    GridLayout:
        rows: 5

        GridLayout:
            cols: 2
            size_hint: .2, .1
            height: .1

            BoxLayout:
                NavIconsTop: 
                    icon: "account"
                    on_press: app.screen_profile()
                MDLabel: 
                    text: "Главная"
                    bold: "True"

            GridLayout:
                cols: 3

                NavIconsTop:
                    icon: "plus-circle-outline"
                NavIconsTop: 
                    icon: "magnify"
                NavIconsTop:
                    icon: "bell-outline" 

        GridLayout:
            cols: 3
            size_hint: 1, .1
            height: .1
            padding: (40, 0, 0, 0)

            ContactTab:
                text: "Tuner"
                opacity: .7 
                on_touch_down: app.screen_main_s(*args)
            ContactTab:
                text: "Быстрая печать"
                opacity: .7 
                on_touch_down: app.screen_SpeedType(*args)
            ContactTab:
                text: "asdf" 
                opacity: 1
                on_touch_down: app.screen_chosen(*args)


        MDBoxLayout:
            orientation: 'horizontal'
            spacing: dp(10)
            padding: dp(20)

            MDLabel:
                text: 'Никто не избран'
                halign: 'center'
                bold: 'True'

            RecycleView:
                id: rv
                key_viewclass: 'viewclass'
                key_size: 'height'

                RecycleBoxLayout:
                    padding: dp(10)
                    default_size: None, dp(48)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'

        GridLayout:
            cols: 4
            padding: (50, 0, 50, 0)
            size_hint: .2, .1
            height: .1

            NavIcons:
                icon: "menu"
            NavIcons:
                icon: "home-variant-outline"
                on_press: app.screen_main()
            NavIcons:
                icon: "cog-outline"


            