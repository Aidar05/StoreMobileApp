<SignIn>
    login: login
    BoxLayout:
        padding: (50, 50, 50, 50)

        GridLayout:
            rows: 4

            MDLabel:
                text: "MES"
                halign: 'center'
                font_size: 30
                on_touch_down: app.screen_main_s(*args)


            GridLayout:
                rows: 2
                height: 30

                MDTextField:
                    id: login
                    hint_text: 'Логин'
                    helper_text: 'Данного аккаунта не существует'
                    helper_text_mode: 'on_error'

                MDTextField:
                    id: password
                    hint_text: 'Пароль'
                    helper_text: 'Неверный пароль'
                    helper_text_mode: 'on_error'

            MDFlatButton: 
                text: 'Войти'
                size_hint: 1, .1
                md_bg_color: app.theme_cls.primary_color
                on_press: root.check_account()

            MDLabel: 
                text: "Нет аккаунта? Создать"
                theme_text_color: "Custom"
                text_color: (.1, .3, 1, .9)
                on_touch_down: app.screen_sign_up_s(*args)