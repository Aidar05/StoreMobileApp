<MDTextField>
    size_hint: 0.7, 0.05
    font_size: 12


<SignIn>
    user_login_number: user_login_number
    id: user_password: id: user_password
    
    canvas:
        Color:
            rgba: .05, .05, .05, 1
        Rectangle: 
            pos: self.pos
            size: self.size
    
    FloatLayout:
        MDFlatButton:
            text: 'AsDf'
            pos_hint: {'x':0.32, 'y':0.80}
            font_size: 40
            size_hint: .4, .1
            on_press: app.MainScreen()
            color: 1, 1, 1, 1 

        MDTextField:
            id: user_login_number
            hint_text: 'Login/Phone number'
            pos_hint: {'x':0.15, 'y': .43}
            max_text_length: 20

        MDTextField:
            id: user_password
            hint_text: 'Password'
            pos_hint: {'x':0.15, 'y': .31}
            max_text_length: 12

        MDFlatButton:
            text: 'Forgot yout password?' 
            pos_hint: {'right': .3  , 'y': .26}
            size_hint: .3, .05
            font_size: 12
            color: .1, 1, 1, 1
            background_color: (0, 0, 0, 0)

        MDFlatButton:
            text: 'Sign in'
            pos_hint: {'right': .4  , 'y': .12}
            size_hint: .25, .05
            font_size: 12
            color: 0, 0, 0, 1
            on_press: root.user_data_check()

        MDLabel:
            text: 'Alredy have an account?' 
            pos_hint: {'right': .5  , 'y': .17}
            size_hint: .3, .05
            font_size: 12


