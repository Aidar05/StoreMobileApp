<SpeedType>: 
    padding: (10, 0, 10, 0)

    GridLayout:
        rows: 5

        GridLayout:
            cols: 2
            size_hint: .2, .1
            height: .1

            BoxLayout:
                NavIconsTop: 
                    icon: "account"
                    on_press: app.screen_profile()
                MDLabel: 
                    text: "Главная"
                    bold: "True"

            GridLayout:
                cols: 3

                NavIconsTop:
                    icon: "plus-circle-outline"
                NavIconsTop: 
                    icon: "magnify"
                NavIconsTop:
                    icon: "bell-outline" 

        GridLayout:
            cols: 3
            size_hint: 1, .1
            height: .1
            padding: (40, 0, 0, 0)

            ContactTab:
                text: "Tuner"
                opacity: .7
                on_touch_down: app.screen_main_s(*args)  
            ContactTab:
                text: "Быстрая печать"
                opacity: 1
                on_touch_down: app.screen_SpeedType(*args)
            ContactTab:
                text: "asdf" 
                opacity: .7
                on_touch_down: app.screen_chosen(*args)
        
        BoxLayout: 
            orientation: 'horizontal'
            size_hint: 1, .15
            padding: (30, 0, 20, 0)

            canvas.before: 
                Color: 
                    rgba: 0, 0, 0, 1
                Line: 
                    points: [0, 540, 500, 540]
                Line: 
                    points: [0, 500, 500, 500]
                Line:
                    points: [0, 440, 500, 440]

            BoxLayout: 
                orientation: 'vertical'

                MDLabel
                    text: 'Таймер'
                    halign: 'center'
                MDLabel:    
                    text: '60'
                    halign: 'center'

            BoxLayout: 
                orientation: 'vertical'
                
                MDLabel
                    text: 'WPM'
                    halign: 'center'
                MDLabel:    
                    text: '60'
                    halign: 'center'

            BoxLayout: 
                orientation: 'vertical'

                MDLabel
                    text: 'CPM'
                    halign: 'center'
                MDLabel:    
                    text: '60'
                    halign: 'center'

            BoxLayout: 
                orientation: 'vertical'

                MDLabel
                    text: 'Точность'
                    halign: 'center'
                MDLabel:    
                    text: '60'
                    halign: 'center'

        MDBoxLayout:
            orientation: 'vertical'
            spacing: dp(10)
            padding: (20, 50, 20, 0)
                
            RecycleView:
                id: speedtype
                key_viewclass: 'viewclass'
                key_size: 'height'

                RecycleBoxLayout:
                    padding: dp(10)
                    default_size: 1, dp(48)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'
            
            MDTextField:
                id: input_text 
                hint_text: 'press enter to start the game'
                md_multiline: 'false'
                on_text_validate: root.game_start()    

        GridLayout:
            cols: 4
            padding: (50, 0, 50, 0)
            size_hint: .2, .1
            height: .1

            NavIcons:
                icon: "menu"
            NavIcons:
                icon: "home-variant-outline"
                on_press: app.screen_main() 
            NavIcons:
                icon: "cog-outline"



            