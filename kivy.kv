# Класс для кнопок внизу экрана. Главная, настройки и т.д
<BottomBtns@MDIconButton>
    color: .9, .9, .9, 1
    size_hint: .2, None
    height: 30
    md_bg_color: app.theme_cls.primary_color

# Класс для текста, описаний продуктов
<MyLabels@MDLabel>
    font_size: 20
    color: .9, .9, .9, 1

# Класс для изображений товаров
<MyIcon@Image>:
    size_hint_y: None
    height: 30


# Класс для изображения фильтра 
<Filter@MDFlatButton>:
    size_hint_y: None
    height: 30
    
# Класс для текста в всплывающем окне для фильтра    
<FilterLabels@MDLabel>
    size_hint: 1, .2
    color: .9, .9, .9, 1

# Класс для кнопок в окне фильтр 
<FilterButton@MDFlatButton>
    size_hint: .8, .05
    color: .9, .9, .9, 1

# Sign_in text TextInput
<MDTextField>
    size_hint: 0.7, 0.05
    font_size: 12
    foreground_color: (0, 0, 0, .7)
    background_color: 1, 0, 0, 1


<MDLabel>
    color: 0, 0, 0, 1

# Главный экран 
<Main>
    name: 'main'
    

    # Состоит этот экран из одного Грида, у которого 3 строки. Каждая из строк свой отдельный layout.
    GridLayout:
        rows: 3
        padding: {0, 10, 0, 10}
        
        # Первое это верхняя часть экрана, фильтр и поиск
        GridLayout:
            cols: 3
            size_hint: .2, .1
            height: .1

            MyIcon:
                canvas.after:
                    Color:
                        rgba: 1, 1, 1, 1
                    Line:
                        points: [50, 550, 50, 530]
                        width: 0.5
                    Line:
                        points: [60, 550, 60, 530]
                        width: 0.5
                    Line:
                        points: [70, 550, 70, 530]
                        width: 0.5
                        
                source: 'imgs/filter.jpg'
                on_touch_down: app.OpenFilter(*args)

            MDFlatButton:
                text: 'AsDf'
                font_size: 40
                size_hint: .4, .1
                on_press: app.MainScreen()
                color: 0, 0, 0, 1 
                background_color: (0, 0, 0, 0)

            MyIcon:
                source: 'imgs/avatar.png'
                on_touch_down: app.Profile(*args)

        # Вторая строка это 'Добро пожаловать в магазин'
        AnchorLayout:
            MDLabel: 
                text: 'Мессенджер'
                halign: 'center'

        # Третья строка это навигация. Меню, главная и настройки        
        GridLayout:
            cols: 5
            size_hint: 1, .1    

            BottomBtns:
                icon: "newspaper-variant"
            BottomBtns:
                icon: "magnify"
            BottomBtns:
                icon: "message-badge-outline"
            BottomBtns: 
                icon: "bell-outline"
            BottomBtns: 
                icon: "menu"

<Friends>
    background_color: .05, .05, .05, 1

    BoxLayout:
        GridLayout:
            cols: 2

            BoxLayout:
                orientation: 'vertical'
                size_hint: .8, .8
                padding: [23, 0, 0, 0]
                
                FilterLabels: 
                    text: 'Laptop:'
                FilterLabels: 
                    text: 'Phone:'
                FilterLabels: 
                    text: 'PC:'
                FilterButton:    
                    text: 'Close'
                    on_press: app.CloseFilter()
            
            BoxLayout:
                orientation: 'vertical'
                size_hint: .8, .8
                padding: [23, 0, 0, 0]
                
                CheckBox: 
                    text: 'Check'
                    size_hint: 1, .2
                    color: 1, 1, 0, 1
                CheckBox: 
                    text: 'Check'
                    size_hint: 1, .2
                    color: 1, 1, 0, 1
                CheckBox: 
                    text: 'Check'
                    size_hint: 1, .2
                    color: 1, 1, 0, 1
                FilterButton:
                    text: 'Save'


    

<FilterWindow>
    title: 'Filter'
    size_hint: 0.8, 0.8
    auto_dismiss: False
    background_color: 255, 255, 255, 1

    BoxLayout:
        GridLayout:
            cols: 2

            BoxLayout:
                orientation: 'vertical'
                size_hint: .8, .8
                padding: [23, 0, 0, 0]
                
                FilterLabels: 
                    text: 'Laptop:'
                FilterLabels: 
                    text: 'Phone:'
                FilterLabels: 
                    text: 'PC:'
                FilterButton:    
                    text: 'Close'
                    on_press: app.CloseFilter()
            
            BoxLayout:
                orientation: 'vertical'
                size_hint: .8, .8
                padding: [23, 0, 0, 0]
                
                CheckBox: 
                    text: 'Check'
                    size_hint: 1, .2
                    color: 1, 1, 0, 1
                CheckBox: 
                    text: 'Check'
                    size_hint: 1, .2
                    color: 1, 1, 0, 1
                CheckBox: 
                    text: 'Check'
                    size_hint: 1, .2
                    color: 1, 1, 0, 1
                FilterButton:
                    text: 'Save'


