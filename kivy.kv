# Класс для кнопок внизу экрана. Главная, настройки и т.д
<BottomBtns@Button>
    color: .9, .9, .9, 1
    background_color: 0, 0, 0, 0
    size_hint_y: None
    height: 30

# Класс для текста, описаний продуктов
<MyLabels@Label>
    font_size: 30
    color: .9, .9, .9, 1

# Класс для изображений товаров
<MyIcon@Image>:
    size_hint_y: None
    height: 30

# Класс для изображения фильтра 
<Filter@Image>:
    size_hint_y: None
    height: 30
    
# Класс для текста в всплывающем окне для фильтра    
<FilterLabels@Label>
    color: .9, .9, .9, 1
    size_hint: 1, .2

# Класс для кнопок в окне фильтр 
<FilterButton@Button>
    size_hint: .8, .05
    color: .9, .9, .9, 1
    background_color: 0.9, 0.9, .9, 1

# Sign_in text TextInput
<SignInInput@TextInput>
    padding: 50
    size_hint: 0.9, 0.06

# Главный экран 
<Main>
    name: 'main'
    # Белый бэкграунд
    canvas.before:
        Color: 
            rgba: .05, .05, .05, 1
        Rectangle:
            pos: self.pos
            size: self.size

    # Состоит этот экран из одного Грида, у которого 3 строки. Каждая из строк свой отдельный layout.
    GridLayout:
        rows: 3
        padding: {0, 10, 0, 10}
        
        # Первое это верхняя часть экрана, фильтр и поиск
        GridLayout:
            cols: 2
            size_hint: .2, .1
            height: .1

            Filter:
                source: 'imgs/filter.jpg'
                on_touch_down: app.OpenFilter(*args)

            MyIcon:
                source: 'imgs/avatar.png'
                on_touch_down: app.Profile(*args)
    
        # Вторая строка это 'Добро пожаловать в магазин'
        AnchorLayout:
            MyLabels: 
                text: 'Welcome to Asdf'

        # Третья строка это навигация. Меню, главная и настройки        
        GridLayout:
            cols: 3
            size_hint: .1, .1

            BottomBtns:
                text: 'Menu         |'
            BottomBtns:
                text: 'Main         |'
            BottomBtns:
                text: 'Settings'

<Notebooks>
    name: 'notebooks'
    canvas.before:
        Color: 
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    GridLayout:
        rows: 3
        padding: {10, 10, 10, 10}

        GridLayout:
            cols: 2
            size_hint: .1, .1
            height: .1

            Filter:
                source: 'imgs/filter.jpg'
                on_touch_down: app.OpenFilter(*args)

            MyIcon:
                source: 'imgs/search.jpg'                 

        GridLayout: 
            cols: 2 

            BoxLayout:
                orientation: 'vertical'

                Image:
                    source: 'imgs/first.jpg'
                Image:
                    source: 'imgs/first.jpg'
                Image:
                    source: 'imgs/first.jpg'

            BoxLayout:
                orientation: 'vertical'

                Label: 
                    text: 'Notebook1'
                    color: 0, 0, 0, 1
                Label: 
                    text: 'Notebook2'
                    color: 0, 0, 0, 1
                Label: 
                    text: 'Notebook3'
                    color: 0, 0, 0, 1

        GridLayout:
            cols: 3
            size_hint: .1, .1

            BottomBtns:
                text: 'Menu         |'
            BottomBtns:
                text: 'Main         |'
            BottomBtns:
                text: 'Settings'

<FilterWindow>
    title: 'Filter'
    size_hint: 0.8, 0.8
    auto_dismiss: False
    background_color: .05, .05, .05, 1

    BoxLayout:
        GridLayout:
            cols: 2

            BoxLayout:
                orientation: 'vertical'
                size_hint: .8, .8
                padding: [23, 0, 0, 0]
                
                FilterLabels: 
                    text: 'Laptop:'
                FilterLabels: 
                    text: 'Phone:'
                FilterLabels: 
                    text: 'PC:'
                FilterButton:    
                    text: 'Close'
                    on_press: app.CloseFilter()
            
            BoxLayout:
                orientation: 'vertical'
                size_hint: .8, .8
                padding: [23, 0, 0, 0]
                
                CheckBox: 
                    text: 'Check'
                    color: 1, 1, 0, 1
                    size_hint: 1, .2
                CheckBox: 
                    text: 'Check'
                    color: 1, 1, 0, 1
                    size_hint: 1, .2
                CheckBox: 
                    text: 'Check'
                    color: 1, 1, 0, 1
                    size_hint: 1, .2
                FilterButton:
                    text: 'Save'


<SignIn>
    canvas.before:
        Color:
            rgba: .05, .05, .05, 1
        Rectangle: 
            pos: self.pos
            size: self.size

    FloatLayout:
        MyLabels:
            text: 'MoGo'
            pos_hint: {'x':0, 'y':0.35}
            background_color: .05, .05, .05, 1
            font_size: 40


        SignInInput:
            text: 'Name'
            pos_hint: {'x':0.05, 'y': .43}

        SignInInput:
            text: 'Last name'
            pos_hint: {'x':0.05, 'y': .31}

        SignInInput:
            text: 'Login/Phone number'
            pos_hint: {'x':0.05, 'y': .67}
            background_color: 1, 1, 1, 1

        SignInInput:
            text: 'Password'
            pos_hint: {'x':0.05, 'y': .55}

        Button: 
            text: 'Sign up'
            pos_hint: {'right': .95  , 'y': .15}
            size_hint: .3, .1
            background_color: 255, 99, 71, 1


